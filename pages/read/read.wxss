/**index.wxss**/
page{
    height: 100%;
    background-color: #efeff4;
}
scroll-view{
  height: 100%;
}
.swiper{
  top: 0px;
  width: 100%;
  height: 240px;    
}
.swiper swiper{
    height: 240px;
}
.slide-image{
  width: 100%;
}
.mobi_title{
    font-size: 15px;
    color: #777;
  line-height: 110%;
  font-weight: normal;
    width: 100%;
  padding: 10px;
  background-color: #f3f3f3;
  position: relative;
}
.mobi_icon{
    padding: 0px 1.5px;
  border-radius: 1.5px;
  background-color: #ff7777;
  position: relative;
  margin-right: 5px;
}
/*list*/
.list{
    overflow: hidden;
    width: 100%;
    padding: 0 20px 0 0;
    border-top: 1px solid #eeeeee;
    background-color: #fff;
  margin-bottom: 5px;
}
.list-img{
  position: relative;
    float: left;
    width: 90px;
}
.list-img .video-img{
    width: 90px;
    height: 90px;
}
.list-detail{
    position: absolute;
  margin-top: 15px;
  margin-left: 105px;
  margin-right: 10px;
}
.list-detail2{
  position: absolute;
  margin-top: 75px;
  margin-left: 105px;
  margin-right: 10px;
}
.list-title{
  width: 500rpx;
}
.list-title text{
    word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
    font-size: 17px;
  color: #333;
    font-weight: bold;
  line-height: 120%;
}
.list-tag view.state{
    display: block;
    font-size: 11px;
    color: #81aaf7;
    width: 50px;
    padding: 2px;
    border: 1px solid #93b9ff;
    border-radius: 2px;
    text-align: center;
    margin-top: 10px;
        float: left;
}
.list-tag .join{
    font-size: 13px;
  line-height: 120%;
  color: #bbb;
  position: absolute;
  display: inline;
  margin: 10px 0 0 20px;
  right: 10px;
}
.list-tag .list-num{
    font-size: 16px;
  color: #ff6666;
}
.list-info{
    font-size: 13px;
  color: #bbb;
  line-height: 110%;
  font-weight: normal;
    margin-top: 40px;
}
.icon_play{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
    background-color:#fff;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 60px;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #FF3333;
    color: #FF3333;
    font-weight: bold;
}
.hidden {
    display: none;
}

.listNews{
    margin:0 40rpx;
}

.listNews .listTitle{
    display: flex;
    height:18px;
    font-size:16px;
    justify-content:space-between;
    align-items:flex-end;
}

.listNews .listTitle .listText{
    display: flex;
    align-items:flex-end;
    height:23px;

}

.listNews .listTitle .listText:before{
    content:'';
    width:2px;
    background:#f06000;
    border-radius: 2px;
    display:inline-block;
    margin: 2px 4px 0 0;
    height:14px;
    align-self:center;
}

.listNews .listTitle .text{
    font-size:16px;
    color: #222;
}

.listNews .listTitle .more{
    color:#f06000;
    font-size:12px;
}

.listNews .list-flex{
    display:flex;
    justify-content:space-between;
    width:100%;
    flex-wrap:wrap;
}

.listNews .listBox{
    width:43%;
    margin-top:16rpx;
    background-color:#fff;
    padding:3%;
}

.listNews .listBox .boxPic{
    height:95px;
    position:relative;
}

.listNews .listBox image{
    width:100%;
    height:95px;
    border-radius: 4px;
}

.listNews .listBox .boxPic .time{
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 3px 8px;
    font-size: 12px;
    color: #fff;
    background-color: rgba(0,0,0,.6);
    border-radius: 4px 0 4px 0;
}

.listNews .listBox .boxPic .icon{
    position:absolute;
    top:0;
    left:0;
    width: 37px;
    height: 37px;
}

.listNews .listBox .boxTitle1,
.listNews .listBox .boxTitle2{
    overflow: hidden;
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.listNews .listBox .boxTitle1{
    height: 20px;
    margin-top: 2px;
    line-height: 20px;
    font-size: 14px;
    color: #222;
}

.listNews .listBox .boxTitle2{
    height: 16px;
    line-height: 16px;
    font-size: 12px;
    color: #999;
}
.listNews .boxTitle2 .author_text,.listNews .boxTitle2 .play_text{
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 50%;
}
.listNews .boxTitle2 .author_text{
    float: left; 
}
.listNews .boxTitle2 .play_text{
    text-align:right;
}
.listNews .boxTitle2 .author_text .icon_author,.listNews .boxTitle2 .play_text .icon_play{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}